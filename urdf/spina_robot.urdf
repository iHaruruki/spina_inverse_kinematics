    <inertial>
      <mass value="0.8"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0008" iyy="0.0008" izz="0.0008" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <joint name="fixed2" type="fixed">
    <parent link="module2_roll_link"/>
    <child  link="module2_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>


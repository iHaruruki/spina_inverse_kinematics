<robot name="spine_robot">
  <!-- Base link -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!--
    This URDF defines a spine-like robot composed of 6 modules.
    Changes relative to a basic design:
      • The box geometry has been removed and replaced with a cylinder.
      • Each module is connected via a pair of revolute joints that enable rotation
        about two distinct axes:
          - An x-axis joint (providing, e.g., pitch motion)
          - A y-axis joint (providing yaw, as requested)
    Each module is implemented using an intermediate link to allow two rotational degrees-of-freedom per segment.
    The connection between modules occurs at the top of the cylinder (assuming a module length of 0.1 m).
  -->

  <!-- Module 1 -->
  <!-- Intermediate link for module 1 -->
  <link name="module1_intermediate">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.01"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Actual module 1 with cylinder geometry -->
  <link name="module1">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
      <material name="Blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>

  <!-- Joint 1: X-axis rotation connecting base_link to module1_intermediate -->
  <joint name="joint1_x" type="revolute">
    <parent link="base_link"/>
    <child link="module1_intermediate"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <!-- Joint 1: Y-axis rotation connecting module1_intermediate to module1 -->
  <joint name="joint1_y" type="revolute">
    <parent link="module1_intermediate"/>
    <child link="module1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <!-- Module 2 -->

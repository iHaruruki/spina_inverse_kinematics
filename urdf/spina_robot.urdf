<?xml version="1.0" ?>
<robot name="two_disk_robot">
  <!-- base_link: This link now represents the fixed lower disk -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.02"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.02"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Fixed joint connecting the base_link and the gimbal's pivot -->
  <!-- The pivot (gimbal_base) is located at the midpoint between the two disks (7.5cm above the lower disk) -->
  <joint name="base_to_gimbal" type="fixed">
    <parent link="base_link"/>
    <child link="gimbal_base"/>
    <origin xyz="0 0 0.075" rpy="0 0 0"/>
  </joint>

  <!-- Gimbal base link acts as the common pivot point for the gimbal mechanism -->
  <link name="gimbal_base">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005"/>
    </inertial>
  </link>

  <!-- Pitch joint: rotates about the Y-axis -->
  <joint name="gimbal_pitch" type="revolute">
    <parent link="gimbal_base"/>
    <child link="gimbal_roll_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <!-- Limit set to -30째 to 30째 which is approximately -0.5236 to 0.5236 radians -->
    <limit lower="-0.5236" upper="0.5236" effort="1" velocity="1"/>
  </joint>

  <!-- Intermediate link for roll rotation -->
  <link name="gimbal_roll_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005"/>
    </inertial>
  </link>

  <!-- Roll joint: rotates about the X-axis -->
  <joint name="gimbal_roll" type="revolute">
    <parent link="gimbal_roll_link"/>
    <child link="top_disk_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <!-- Limit set to -30째 to 30째 which is approximately -0.5236 to 0.5236 radians -->
    <limit lower="-0.5236" upper="0.5236" effort="1" velocity="1"/>
  </joint>

  <!-- Movable top disk -->
  <!-- Its center is positioned 7.5cm above the pivot so that the total center-to-center distance between disks is 15cm -->
  <link name="top_disk_link">
    <visual>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.02"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.02"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>
</robot>

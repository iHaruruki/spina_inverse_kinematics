        <cylinder length="0.1" radius="0.05"/>
      </geometry>
      <material name="Green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
  </link>

  <!-- Joint 2: X-axis rotation connecting module1 to module2_intermediate -->
  <joint name="joint2_x" type="revolute">

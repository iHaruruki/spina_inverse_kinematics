<?xml version="1.0"?>
<robot name="spine_robot">

  <!-- Base -->
  <link name="base_link">
    <visual>
      <geometry><cylinder radius="0.1" length="0.15"/></geometry>
    </visual>
    <collision>
      <geometry><cylinder radius="0.1" length="0.15"/></geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- 6 modules: pitch→roll→module_link→fixed to roll_link -->
  <!-- spacing 0.15m, pitch axis=y, roll axis=x, limits ±30° (0.5236rad) -->

  <!-- Module 1 -->
  <link name="module1_pitch_link"/>
  <joint name="pitch1" type="revolute">
    <parent link="base_link"/>
    <child  link="module1_pitch_link"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <axis  xyz="0 1 0"/>
    <limit lower="-0.5236" upper="0.5236" effort="10" velocity="1.0"/>
  </joint>

  <link name="module1_roll_link"/>
  <joint name="roll1" type="revolute">
    <parent link="module1_pitch_link"/>
    <child  link="module1_roll_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis  xyz="1 0 0"/>
    <limit lower="-0.5236" upper="0.5236" effort="10" velocity="1.0"/>
  </joint>

  <link name="module1_link">
    <visual>
      <geometry><cylinder radius="0.1" length="0.15"/></geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.1" length="0.15"/></geometry>
    </collision>
    <inertial>
      <mass value="0.8"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0008" iyy="0.0008" izz="0.0008" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  <joint name="fixed1" type="fixed">
    <parent link="module1_roll_link"/>
    <child  link="module1_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Module 2 -->
  <link name="module2_pitch_link"/>
  <joint name="pitch2" type="revolute">
    <parent link="module1_link"/>
    <child  link="module2_pitch_link"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <axis  xyz="0 1 0"/>
    <limit lower="-0.5236" upper="0.5236" effort="10" velocity="1.0"/>
  </joint>

  <link name="module2_roll_link"/>
  <joint name="roll2" type="revolute">
    <parent link="module2_pitch_link"/>
    <child  link="module2_roll_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis  xyz="1 0 0"/>
    <limit lower="-0.5236" upper="0.5236" effort="10" velocity="1.0"/>

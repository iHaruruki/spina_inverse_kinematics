<?xml version="1.0"?>
<robot name="modular_spine_robot">
  <!-- Base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <!-- A cylinder to represent a circular module -->
        <cylinder radius="0.1" length="0.15"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.15"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Define six modules -->
  <!-- Each module is spaced 15cm (0.15m) apart vertically -->

  <!-- Module 1 -->
  <link name="module1">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.15"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.15"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.8"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0008" ixy="0" ixz="0" iyy="0.0008" iyz="0" izz="0.0008"/>
    </inertial>
  </link>

  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="module1"/>
    <!-- The joint origin positions module1 15cm above base_link -->
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <!-- Example axis; adjust as needed for tilt in the xy plane -->
    <axis xyz="0 0 1"/>
    <limit lower="-1.5708" upper="1.5708" effort="10" velocity="1.0"/>
  </joint>

  <!-- Module 2 -->
  <link name="module2">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.15"/>
